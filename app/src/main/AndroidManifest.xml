<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exomind.task">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:name="com.exomind.task.ExoMindApp"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/exomind_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/exomind_app"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:name=".weather.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".weather.WeatherActivity"
            android:screenOrientation="portrait"

            android:theme="@style/AppTheme" />

    </application>

</manifest>